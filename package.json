{
  "name": "pemba",
  "version": "0.0.1",
  "description": "Build message driven single page applications with Pemba ğŸ¦",
  "license": "MIT",
  "repository": "cjjenkinson/pemba",
  "author": "Cameron Jenkinson <camjenkinson@gmail.com>",
  "main": "dist/pemba.umd.js",
  "module": "dist/pemba.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "ava",
    "build:module": "rollup src/didact.js -f es -n pemba -o dist/pemba.es.js",
    "build:main": "rollup src/didact.js -f umd -n pemba -o dist/pemba.umd.js",
    "build": "run-p build:module build:main",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pemba", "react", "redux"
  ],
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.3.3",
    "babel-register": "^6.24.1",
    "browser-env": "^2.0.29",
    "npm-run-all": "^4.0.2",
    "rollup": "^0.41.6"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "plugins": [
      [
        "transform-react-jsx",
        {}
      ]
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}